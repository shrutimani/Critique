{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#fff",
  "padding": 5,
  "width": 800,
  "height": 500,
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/shrutimani/week-9-homework/main/js/ne_10m_admin_1_states_provinces%20(1).topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces"
      }
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/shrutimani/week-10-homework/main/India_states_latlong.json",
      "format": {"type": "json"}
    },
    {
      "name": "data_0",
      "source": "source_1",
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["lng", "lat"],
          "as": ["layer_1_layer_0_x", "layer_1_layer_0_y"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_1",
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["lng", "lat"],
          "as": ["layer_1_layer_1_x", "layer_1_layer_1_y"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "translate": {"signal": "[width / 2, height / 2]"},
      "type": "equirectangular",
      "center": {"signal": "center_to"},
      "scale": {"signal": "zoom_level"}
    }
  ],
  "signals": [
    {
      "name": "zoom_level",
      "value": 1500,
      "bind": {
        "input": "range",
        "min": 500,
        "max": 10000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [77.1, 28.7],
      "bind": {
        "input": "select",
        "options": [
          [74.85, 32.726],
          [77.59, 12.97],
          [85.13, 25.59],
          [72.83, 21.17]
        ],
        "labels": ["North", "South", "East", "West"],
        "name": "Map Centre: "
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_layer_0_marks",
      "type": "symbol",
      "clip": true,
      "style": ["circle"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": {"value": "orange"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"lng: \" + (format(datum[\"lng\"], \"\")) + \"; lat: \" + (format(datum[\"lat\"], \"\"))"
          },
          "x": {"field": "layer_1_layer_0_x"},
          "y": {"field": "layer_1_layer_0_y"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_layer_1_marks",
      "type": "text",
      "clip": true,
      "style": ["text"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "dy": {"value": -10},
          "fill": {"value": "black"},
          "description": {
            "signal": "\"lng: \" + (format(datum[\"lng\"], \"\")) + \"; lat: \" + (format(datum[\"lat\"], \"\")) + \"; city: \" + (isValid(datum[\"city\"]) ? datum[\"city\"] : \"\"+datum[\"city\"])"
          },
          "x": {"field": "layer_1_layer_1_x"},
          "y": {"field": "layer_1_layer_1_y"},
          "text": {
            "signal": "isValid(datum[\"city\"]) ? datum[\"city\"] : \"\"+datum[\"city\"]"
          },
          "align": {"value": "center"},
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "config": {
    "path": {"stroke": "#4572a7"},
    "shape": {"stroke": "#4572a7"},
    "symbol": {"fill": "#4572a7", "strokeWidth": 1.5, "size": 50},
    "range": {
      "category": [
        "#C6C6C6",
        "#aa4643",
        "#8aa453",
        "#71598e",
        "#4598ae",
        "#d98445",
        "#94aace",
        "#d09393",
        "#b9cc98",
        "#a99cbc"
      ]
    },
    "axis": {
      "bandPosition": 0.5,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 1,
      "gridWidth": 0.5,
      "labelPadding": 10,
      "tickSize": 5,
      "tickWidth": 0.5
    },
    "axisBand": {"grid": false, "tickExtra": true},
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 50,
      "symbolType": "square"
    },
    "style": {
      "arc": {"fill": "#4572a7"},
      "area": {"fill": "#4572a7"},
      "line": {"stroke": "#4572a7", "strokeWidth": 2},
      "rect": {"fill": "#4572a7"}
    }
  }
}