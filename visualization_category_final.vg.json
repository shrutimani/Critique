{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": null,
  "padding": 5,
  "width": 330,
  "height": 250,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/shrutimani/Critique/main/three_categories.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.year == Year_Selection"},
        {"type": "filter", "expr": "datum.category == Category_Selection"}
      ]
    }
  ],
  "signals": [
    {
      "name": "Year_Selection",
      "value": "2013",
      "bind": {
        "input": "select",
        "options": [2013, 2014, 2015],
        "name": "Year Selection"
      }
    },
    {
      "name": "Category_Selection",
      "value": "computer",
      "bind": {
        "input": "select",
        "options": ["computer", "electricity", "water"],
        "name": "Category Selection"
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"state\"]"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"state\": isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"], \"price\": format(datum[\"price\"], \"\")}"
          },
          "description": {
            "signal": "\"state: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]) + \"; Percentage dropouts: \" + (format(datum[\"price\"], \"\")) + \"; price: \" + (format(datum[\"price\"], \"\"))"
          },
          "x": {"scale": "x", "field": "state"},
          "y": {"scale": "y", "field": "price"},
          "defined": {
            "signal": "isValid(datum[\"price\"]) && isFinite(+datum[\"price\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {"data": "source_0", "field": "state", "sort": true},
      "range": [0, {"signal": "width"}],
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "price"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0,
      "labelColor":"white",
      "titleColor":"white",
      "gridColor":"white"
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "state",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0,
      "labelColor":"white",
      "titleColor":"white",
      "gridColor":"white"
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Percentage dropouts",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0,
      "labelColor":"white",
      "titleColor":"white",
      "gridColor":"white"
    }
  ],
  "config": {}
}