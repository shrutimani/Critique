{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": null,
  "padding": 5,
  "width": 330,
  "height": 300,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/shrutimani/Critique/main/three_categories.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.year == Year_Selection"},
        {"type": "filter", "expr": "datum.category == Category_Selection"}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["category"],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "Year_Selection",
      "value": "2013",
      "bind": {
        "input": "select",
        "options": [2013, 2014, 2015],
        "name": "Year Selection"
      }
    },
    {
      "name": "Category_Selection",
      "value": "computer",
      "bind": {
        "input": "select",
        "options": ["computer", "electricity", "water"],
        "name": "Category Selection"
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"state\"]"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#4572a7"},
          "description": {
            "signal": "\"state: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]) + \"; price: \" + (isValid(datum[\"price\"]) ? datum[\"price\"] : \"\"+datum[\"price\"])"
          },
          "x": {"scale": "x", "field": "state"},
          "y": {"scale": "y", "field": "price"},
          "strokeWidth": {"value": 2}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rule",
      "style": ["rule"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"scale": "color", "field": "category"},
          "description": {
            "signal": "\"Count of Records: \" + (format(datum[\"__count\"], \"\")) + \"; category: \" + (isValid(datum[\"category\"]) ? datum[\"category\"] : \"\"+datum[\"category\"])"
          },
          "x": {"field": {"group": "width"}},
          "x2": {"value": 0},
          "y": {"field": "__count"},
          "strokeWidth": {"value": 2}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "align": {"value": "right"},
          "baseline": {"value": "bottom"},
          "text": {"value": "MAX VALUE  "},
          "dx": {"value": -2},
          "dy": {"value": -125},
          "fill": {"value": "darkblue"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {"data": "source_0", "field": "state", "sort": true},
      "range": [0, {"signal": "width"}],
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "point",
      "domain": {
        "data": "source_0",
        "field": "price",
        "sort": {"order": "descending", "field": "key"}
      },
      "range": [0, {"signal": "height"}],
      "padding": 0.5
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_0", "field": "category", "sort": true},
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "state",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "price",
      "zindex": 0
    }
  ],
  "legends": [{"stroke": "color", "title": "category"}],
  "config": {
    "background": "#fff",
    "arc": {"fill": "#4572a7"},
    "area": {"fill": "#4572a7"},
    "line": {"stroke": "#4572a7", "strokeWidth": 2},
    "path": {"stroke": "#4572a7"},
    "rect": {"fill": "#4572a7"},
    "shape": {"stroke": "#4572a7"},
    "symbol": {"fill": "#4572a7", "strokeWidth": 1.5, "size": 50},
    "axis": {
      "bandPosition": 0.5,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 1,
      "gridWidth": 0.5,
      "labelPadding": 10,
      "tickSize": 5,
      "tickWidth": 0.5
    },
    "axisBand": {"grid": false, "tickExtra": true},
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 50,
      "symbolType": "square"
    },
    "range": {
      "category": [
        "#4572a7",
        "#aa4643",
        "#8aa453",
        "#71598e",
        "#4598ae",
        "#d98445",
        "#94aace",
        "#d09393",
        "#b9cc98",
        "#a99cbc"
      ]
    },
    "style": {
      "arc": {"fill": "#4572a7"},
      "area": {"fill": "#4572a7"},
      "line": {"stroke": "#4572a7", "strokeWidth": 2},
      "rect": {"fill": "#4572a7"}
    }
  }
}