{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#fff",
  "padding": 5,
  "width": 550,
  "height": 450,
  "title": {
    "text": "Dropout rates in 2014 for primary students ",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/shrutimani/week-10-homework/main/primary%20data.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/shrutimani/week-9-homework/main/js/ne_10m_admin_1_states_provinces%20(1).topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"name\"]",
          "as": "properties.name"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "States",
          "fields": ["properties.name"],
          "values": ["States"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "white"},
          "fill": {"scale": "color", "field": "States"},
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"properties.name\"]) ? datum[\"properties.name\"] : \"\"+datum[\"properties.name\"], \"Total Number of dropouts\": format(datum[\"Total\"], \",\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"States: \" + (isValid(datum[\"States\"]) ? datum[\"States\"] : \"\"+datum[\"States\"]) + \"; State: \" + (isValid(datum[\"properties.name\"]) ? datum[\"properties.name\"] : \"\"+datum[\"properties.name\"]) + \"; Total Number of dropouts: \" + (format(datum[\"Total\"], \",\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "States", "sort": true},
      "range": "ordinal",
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "title": "Top 10 States",
      "fill": "color",
      "encode": {"symbols": {"update": {"stroke": {"value": "white"}}}}
    }
  ],
  "config": {
    "path": {"stroke": "#4572a7"},
    "shape": {"stroke": "#4572a7"},
    "symbol": {"fill": "#4572a7", "strokeWidth": 1.5, "size": 50},
    "range": {
      "category": [
        "#C6C6C6",
        "#aa4643",
        "#8aa453",
        "#71598e",
        "#4598ae",
        "#d98445",
        "#94aace",
        "#d09393",
        "#b9cc98",
        "#a99cbc"
      ]
    },
    "axis": {
      "bandPosition": 0.5,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 1,
      "gridWidth": 0.5,
      "labelPadding": 10,
      "tickSize": 5,
      "tickWidth": 0.5
    },
    "axisBand": {"grid": false, "tickExtra": true},
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 50,
      "symbolType": "square"
    },
    "style": {
      "arc": {"fill": "#4572a7"},
      "area": {"fill": "#4572a7"},
      "line": {"stroke": "#4572a7", "strokeWidth": 2},
      "rect": {"fill": "#4572a7"}
    }
  }
}